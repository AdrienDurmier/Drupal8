<script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "JobPosting",
      "baseSalary": "{{ node.field_jobposting_basesalary.value }}",
      "jobBenefits": "{{ node.field_jobposting_jobbenefits.value }}",
      "datePosted": "2011-10-31",
      "description": "{{ node.body.value|raw }}",
      "experienceRequirements": "{{ employmentType }}",
      "incentiveCompensation": "{{ node.field_jobposting_inccompensation.value }}",
      "hiringOrganization": "{{ node.field_jobposting_hiringorg.value }}",
      "salaryCurrency": "EUR",
      "skills": "{{ node.field_jobposting_skills.value }}",
      "title": "{{ node.title.value }}",
      "workHours": "{{ node.field_jobposting_workhours.value }}"
    }
</script>